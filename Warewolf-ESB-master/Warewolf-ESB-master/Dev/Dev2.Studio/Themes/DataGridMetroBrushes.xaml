<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Warewolf Studio;component/Themes/Colors.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- Button Brushes -->
    <SolidColorBrush x:Key="DataGridBackgroundBrush" Color="{StaticResource Color_021b}" />
    <SolidColorBrush x:Key="DataGridBorderBrush" Color="{StaticResource Color_004b}" />
    <SolidColorBrush x:Key="DataGridHoverBackgroundBrush" Color="{StaticResource Color_006b}" />
    <SolidColorBrush x:Key="DataGridHoverBorderBrush" Color="{StaticResource Color_003b}" />
    <SolidColorBrush x:Key="DataGridPressedBackgroundBrush" Color="{StaticResource Color_024b}" />
    <SolidColorBrush x:Key="DataGridPressedBorderBrush" Color="{StaticResource Color_024b}" />
    <SolidColorBrush x:Key="DataGridSelectedBackgroundBrush" Color="{StaticResource Color_026b}" />
    <SolidColorBrush x:Key="DataGridColumnHeaderBackgroundBrush" Color="#F0F0F0" />

</ResourceDictionary>