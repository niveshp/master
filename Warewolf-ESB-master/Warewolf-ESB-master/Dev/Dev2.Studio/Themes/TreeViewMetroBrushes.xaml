<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Warewolf Studio;component/Themes/Colors.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- TreeView Brushes -->
    <SolidColorBrush x:Key="TreeViewBackgroundBrush" Color="{StaticResource Color_009b}" />
    <SolidColorBrush x:Key="TreeViewBorderBrush" Color="{StaticResource Color_004b}" />
    <SolidColorBrush x:Key="TreeViewItemBackgroundBrush" Color="{StaticResource Color_009b}" />
    <SolidColorBrush x:Key="TreeViewItemBorderBrush" Color="{StaticResource Color_009b}" />
    <SolidColorBrush x:Key="TreeViewItemHoverBackgroundBrush" Color="{StaticResource WarewolfDarkGrey}" />
    <SolidColorBrush x:Key="TreeViewItemHoverBorderBrush" Color="{StaticResource WarewolfDarkGrey}" />
    <SolidColorBrush x:Key="TreeViewItemPressedBackgroundBrush" Color="{StaticResource WarewolfDarkGrey}" />
    <SolidColorBrush x:Key="TreeViewItemPressedBorderBrush" Color="{StaticResource WarewolfDarkGrey}" />
    <SolidColorBrush x:Key="TreeViewItemSelectedBackgroundBrush" Color="{StaticResource WarewolfDarkGrey}" />
    <SolidColorBrush x:Key="TreeViewItemSelectedBorderBrush" Color="{StaticResource WarewolfDarkGrey}" />
    <SolidColorBrush x:Key="TreeViewArrowBackgroundBrush" Color="{StaticResource Color_050}"/>
    <SolidColorBrush x:Key="TreeViewArrowBorderBrush" Color="{StaticResource Color_003b}"/>
    <SolidColorBrush x:Key="TreeViewArrowCheckedBackgroundBrush" Color="{StaticResource Color_003b}"/>
    <SolidColorBrush x:Key="TreeViewArrowCheckedBorderBrush" Color="{StaticResource Color_001b}"/>
    <SolidColorBrush x:Key="TreeViewArrowHoverBorderBrush" Color="{StaticResource Color_024b}"/>
    <SolidColorBrush x:Key="TreeViewArrowHoverBackgroundBrush" Color="{StaticResource Color_050}"/>
    <SolidColorBrush x:Key="TreeViewArrowHoverCheckedBorderBrush" Color="{StaticResource Color_024b}"/>
    <SolidColorBrush x:Key="TreeViewArrowHoverCheckedBackgroundBrush" Color="{StaticResource Color_006b}"/>
    <PathGeometry x:Key="TreeArrow" Figures="M0,0 L0,6 L6,0 z"/>

</ResourceDictionary>