<sap:ActivityDesigner x:Class="Unlimited.Applications.BusinessDesignStudio.Activities.DsfTagCountActivityDesigner"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sap="clr-namespace:System.Activities.Presentation;assembly=System.Activities.Presentation"
    xmlns:sapv="clr-namespace:System.Activities.Presentation.View;assembly=System.Activities.Presentation"
    xmlns:attachedProperties="clr-namespace:Dev2.Studio.AppResources.AttachedProperties"
                      xmlns:attachedProperties2="clr-namespace:Dev2.Studio.AppResources.AttachedProperties;assembly=Dev2.Activities.Designers">
    <Grid>
        <StackPanel>
            <Label>Count the occurrences of this tag -></Label>
            <TextBox Text="{Binding Path=ModelItem.TagName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     attachedProperties2:WizardEngineAttachedProperties.DontOpenWizard="True"/>
        </StackPanel>        
    </Grid>
</sap:ActivityDesigner>
